{
  "name": "cypress-automation",
  "version": "1.0.0",
  "type": "module",
  "description": "Cypress Automation Tests",
  "main": "index.js",
  "scripts": {
    "cytest": "node runCypressTests.js",
    "clearReports":"node reset-directory.js --reset cypress/reports",
    "pretest": "node reset-directory.js --reset cypress/cucumber-json",
    "test": "node runCypressTests.js || true",
    "posttest": "node generate-report.js",
    "lint": "eslint . --ext .js --fix",
    "format": "prettier --write ."
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^13.7.2",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-prettier": "^5.1.3",
    "moment": "^2.30.1",
    "multiple-cucumber-html-reporter": "^3.6.2",
    "yargs": "^17.7.2",
    "prettier": "^3.2.5"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepdefinitions": false,
    "step_definitions": "cypress/e2e/cucumber/step-definitions/**/*",
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  }
}
